    "nodemon": "^1.18.4",
    "prettier": "^1.11.1",
    "sinon": "^6.0.1",
    "supertest": "^3.1.0",
    "ts-jest": "^21.2.4",
    "ts-loader": "^4.1.0",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "5.3.2",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13",
